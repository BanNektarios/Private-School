<%- include partials/header %>
<%- include partials/navbar %>

<h1 class="listsH1"><%= headings %> </h1>

    <div class="row mb-5">

        <% for (let i = 0; i < trainers.length; i++) { %>
        <div class="col-xs-1-12 m-2 p-2 list-item">

            <ul>
                <li hidden><%= trainers[i].id %> </li>
                <li><span class="listSpan">First Name: </span><%= trainers[i].firstName %> </li>
                <li><span class="listSpan">Last Name:</span><%= trainers[i].lastName %> </li>
                <li><span class="listSpan">Subject: </span><%= trainers[i].subject %> </li>
            </ul>
        </div>

        <% } %>
    </div>

    <a href="http://localhost:3000/list/trainers/add"><button type="button" name="addTr" id="addTr" class="btn btn-warning" btn-lg btn-block">Add new Trainer</button></a>



