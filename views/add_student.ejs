<%- include partials/header %>
<%- include partials/navbar %>

<div id="formDiv" class="p3">
    <div class="h1Div">
        <h1 class="col-sm-1-12 h1Form display-4 mr-5"><em> <%= headings %> </em></h1>
    </div>
    <div>
        <form id="form" action="" method="post">
            <div class="form-group">
                <label for="addStudent">First Name: </label>
                <input title="Enter only letters!" type="text" class="form-control" name="firstName" id="firstName"
                    placeholder="First Name!">
            </div>
            <div class="form-group">
                <label for="addStudent">Last Name: </label>
                <input title="Enter only letters!" type="text" class="form-control" name="lastName" id="lastName"
                    placeholder="Last Name!">
            </div>
            <div class="form-group">
                <label for="addStudent"> Date of Birth: </label>
                <input title="Date format is: YYYY-MM-DD!" type="date" class="form-control" name="birthDate"
                    id="birthDate" placeholder="Birth Date!">
            </div>
            <div class="form-group">
                <label for="addStudent"> Tuition Fees: </label>
                <input title="Enter only the number!" type="number" class="form-control" name="tuitionFees"
                    id="tuitionFees" placeholder="Amount!" min="0" max="2500">
            </div>
            <button type="submit" class="btn btn-submit">Submit</button>
        </form>
    </div>
</div>


<%- include partials/footer %>